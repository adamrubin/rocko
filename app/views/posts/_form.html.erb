<%= semantic_form_for @post do |form| %>
	<%= form.inputs do %>
		<%= form.input :message, :placeholder => "e.g., hello world"%>
	<% end %>
	<%= form.buttons do %>
		<%= form.commit_button :button_html => { :class => "btn big" } %>
	<% end %>	
<% end %>

<script type="text/javascript">
$(document).ready(function() {
	$('#new_post').submit(function(event) {
		sendMessage($(this));
		event.preventDefault();
	});
});
</script>
